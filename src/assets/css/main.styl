@import 'nib'
@import 'normalize.css'
@import 'fonts.css'

bodyBackgroundColor=#d2d2d2
sectionBackgroundColor=#ededed
leaderboardBackgroundColor=#969696

a
  color black
  text-decoration underline
  &:hover, a:active, a:visited
    color:#000000


body
  font-family Trade_Gothic
  background-color bodyBackgroundColor
  #leaderboard
    max-width 728px
    height 90px
    background-color leaderboardBackgroundColor
    margin auto
  #logo
    height 100px
    background url('../images/logo.png') center no-repeat
  #main
    background-color white
    width 100%
    nav
      background-color black
      color white
      height 50px
      text-transform: uppercase;
      text-align center
      ul
        margin 0
        padding 0
        li
          display inline-block
          font-size: 22px;
          padding: 15px 20px;
    .main-content
      .photo
        display none
      .intro
        background-color sectionBackgroundColor
        text-align center
        padding: 5%
        img
          width 250px
        form
          margin auto
          overflow hidden
          label
            display: block
            width 100%
          label.terms
            display: initial
            width 100%
          input
            width 80%
          button
            display: block;
            clear: both;
            width: 100%;
            background-color: black;
            color: white;
            border: 0;
            font-family Trade_Gothic
            padding 1% 0
    .section
      background-color sectionBackgroundColor
      padding: 0 5%

@media (min-width: 992px)
  body
    #main
      width 95%
      margin auto
      .main-content
        border-radius 33% 0 0 0
        overflow hidden
        background-color sectionBackgroundColor
        .photo
          display: block
          float: left
          width 65%
          padding-bottom 75%
          border-radius 0 0 33% 0
          background url('../images/240_01_036.jpg') no-repeat
          background-position-x 50%
        .intro
          float: left
          width 25%
          padding 5%
          img
            width: 100%
          form
            label
              display: block
              float: left
              clear left
              width 35%
              text-align left
            input
              float left
              width 60%
            button
              padding 5% 0
      .section
        overflow hidden
        .description
          float: left
          width 65%
          margin-right 5%
        .over-and-social
          text-align center
          float: left
          width 25%
          img
            width 100%