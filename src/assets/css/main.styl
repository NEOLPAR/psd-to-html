@import 'nib'
@import 'normalize.css'
@import 'fonts.css'

bodyBackgroundColor=#d2d2d2
sectionBackgroundColor=#ededed
leaderboardBackgroundColor=#969696

a
  text-decoration none
  color black
  border-bottom: 1px solid black
  &:hover, a:active, a:visited
    color:#000000
span, h1
  text-transform: uppercase;
h1
  font-size: 20pt;
  font-weight: normal;
i
  display: inline-block
  width 35px
  height: 35px
  margin-left 10px
  &.facebook_icon
    background url('../images/facebook_icon.png') center no-repeat
    background-size cover
  &.twitter_icon
    background url('../images/twitter_icon.png') center no-repeat
    background-size cover
  &.instagram_icon
    background url('../images/instagram_icon.png') center no-repeat
    background-size cover
p
  font-size: 14pt;
  line-height: 1.2;
hr
  clear both
  width 90%
  margin 0 auto 20px auto
  display: block;
  border: 0;
  border-top: 1px solid bodyBackgroundColor

body
  font-family Trade_Gothic
  background-color bodyBackgroundColor
  #leaderboard
    max-width 728px
    height 90px
    background-color leaderboardBackgroundColor
    margin auto
  #logo
    height 100px
    background url('../images/logo.png') center no-repeat
  #main
    background-color white
    width 100%
    nav
      background-color black
      color white
      height 50px
      text-transform: uppercase;
      text-align center
      ul
        margin 0
        padding 0
        li
          display inline-block
          font-size: 17pt;
          padding: 15px 20px;
    .main-content
      overflow: hidden
      .photo
        display none
      .intro
        position: relative
        text-align center
        padding: 5%
        background: url("../images/240_01_036.jpg") no-repeat;
        background-position: 50% -100px;
        .intro-block
          background-color: rgba(255,255,255,0.6);
        img
          width 250px
        form
          margin auto
          overflow hidden
          line-height 1.2
          label
            display: block
            width 100%
          input
            width 80%
          .check-terms
            line-height 2
            display: block
            width 100%
            label
              display: inline-block;
              width: 250px;
            input
              width 5%
              margin-left 5px
          button
            line-height: 3;
            margin-top: 20px;
            display: block;
            clear: both;
            width: 100%;
            background-color: black;
            color: white;
            border: 0;
            font-family Trade_Gothic
    .section
      background-color sectionBackgroundColor
      overflow hidden
      padding 0 5%
      .over-and-social
        img
          display: block
          width 100%
          max-width 315px
          margin 0 auto
        span
          display: block
          line-height: 7;
          margin 0 auto
          text-align center
      &.news
        padding 2% 5% 5% 5%
        img
          float: left
          padding-right 5%
        h1
          margin 0
    footer
      background-color bodyBackgroundColor
      text-align: center;
      line-height: 4;
      font-size 10pt

@media (min-width: 992px)
  body
    #main
      width 95%
      margin auto
      .main-content
        border-radius 33% 0 0 0
        overflow hidden
        background-color sectionBackgroundColor
        .photo
          position: inherit
          display: block
          float: left
          width 65%
          height 840px
          border-radius 0 0 33% 0
          background url('../images/240_01_036.jpg') no-repeat
          background-position 50% 0
          opacity 1
        .intro
          background none
          background-color sectionBackgroundColor
          float: left
          width 25%
          padding 5%
          .intro-block
            background-color inherit
          img
            width: 100%
            margin-bottom 20px
          p
            line-height: 1.5;
            &.escapism-description
              margin: 2em 0 5em 0;
          form
            label
              display: block
              float: left
              clear left
              width 35%
              text-align left
              line-height 2
            input
              float left
              width 60%
            .check-terms
              label
                width 90%
              input[type="radio"]
                margin: 7px 0 0 5px;
            button
              padding 5% 0
              line-height 1
              display: inline-block
      .section
        padding 0
        border-bottom 1px
        .description
          float: left
          width 55%
          padding 0 5%
        .over-and-social
          float: left
          width 30%
        &.news
          padding-bottom 2%